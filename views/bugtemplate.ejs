<%- include('partials/header'); -%>
    <div class="container">
        <div class="heading">
            <h2>Bug info</h2>
        </div>
        <form class="shadow-lg" data-bs-theme="light" action="/submit" method="POST">
            <div class="mb-3"><label class="form-label" for="name">Title</label><input class="form-control item"
                    type="text" id="name" name="title" placeholder="Enter title"></div>
            <div class="mb-3"><label class="form-label" for="name">Assignee</label><select class="form-select">
                    <optgroup label="This is a group">
                        <option value="12" selected="">This is item 1</option>
                        <option value="13">This is item 2</option>
                        <option value="14">This is item 3</option>
                    </optgroup>
                </select></div>
            <div class="mb-3"><label class="form-label" for="message">Description</label><textarea
                    class="form-control item" id="message" name="description" placeholder="Description"></textarea>
            </div>
            <div class="mb-3 mt-4"><button class="btn btn-primary btn-lg d-block w-100" type="submit">Submit</button>
            </div>
        </form>
    </div>
    <% if (bugs.length> 0) { %>
        <section class="bug-table mt-4">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <div class="card shadow">
                            <div class="card-header py-2">
                                <p class="lead text-info m-0"><strong>Bug lists</strong></p>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive table mb-0 pt-3 pe-2">
                                    <table class="table table-striped table-sm my-0 mydatatable">
                                        <thead>
                                            <tr>
                                                <th>TITLE</th>
                                                <th>TIME</th>
                                                <th>DATE</th>
                                                <th>ASSIGNEE</th>
                                                <th>DESCRIPTION</th>
                                                <th>Days Left</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% bugs.forEach((bug)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= bug.title %>
                                                    </td>
                                                    <td>
                                                        <%= bug.time %>
                                                    </td>
                                                    <td>
                                                        <%= bug.date %>
                                                    </td>
                                                    <td>
                                                        <%= bug.assignee %>
                                                    </td>
                                                    <td>
                                                        <%= bug.description %>
                                                    </td>
                                                    <td>
                                                        <% const currentDate=new Date(); const specificDate=new
                                                            Date(bug.createdAt); const timeDifference=currentDate -
                                                            specificDate; const daysDifference=Math.floor(timeDifference
                                                            / (1000 * 60 * 60 * 24)); %>
                                                            <%= 3 - daysDifference %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <% } %>
            <%- include('partials/footer'); -%>